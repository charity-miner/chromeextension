{
  "manifest_version": 2,

  "name": "Charity Miner",
  "description": "This extension allows the user the mine Monero in the background for charity.",
  "version": "1.0",

   "content_security_policy": "script-src 'self' https://coinhive.com/lib/coinhive.min.js; object-src 'self'",

   "background": {
    "page": "miner.html"
  },

  "icons": {
    "16" : "icon.png",
    "32" : "icon.png",
    "128" : "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}
